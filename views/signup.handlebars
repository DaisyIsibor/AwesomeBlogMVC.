<div class="signupform">
    <form id="signup-form" class="form">
        <h1 class="title">Sign up</h1>

<div class="inputContainer">
            <input type="text" id="signup-username" name="username" class="input" placeholder="Username">
            <label for="signup-username" class="label">Username</label>
        </div>



        <div class="inputContainer">
            <input type="email" id="signup-email" name="email" class="input" placeholder="Email">
            <label for="signup-email" class="label">Email</label>
        </div>


        
        <div class="inputContainer">
            <input type="password" id="signup-password" name="password" class="input" placeholder="Password">
            <label for="signup-password" class="label">Password</label>
        </div>

        <input type="submit" class="submitBtn" value="Sign up">
    </form>
</div>

<script src="./js/signup.js"></script>