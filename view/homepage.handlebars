<!-- views/homepage.handlebars -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homepage</title>
    <link rel="stylesheet" href="/styles.css"> <!-- Link to your CSS stylesheet -->
</head>
<body>

<!-- Navigation bar -->
<nav>
    <ul>
        <li><a href="/profile">Profile</a></li> <!-- Link to the profile page -->
        <li><a href="/login">Login</a></li> <!-- Link to the login page -->
    </ul>
</nav>

<!-- Content area -->
<div class="content">
    <h1>Homepage</h1>

    <!-- Render each post using the post partial -->
    <ul class="post-list">
        {{#each posts as |post|}}
            <li>
                {{> post post}}
            </li>
        {{/each}}
    </ul>

</div>

</body>
</html>
