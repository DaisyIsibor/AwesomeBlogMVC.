<div class="signinform">
    <form id="signin-form" class="form">
        <h1 class="title">Sign In</h1>

            <div class="inputContainer">
            <input type="text" id="signin-username" class="input" placeholder="Username">
            <label for="signin-username" class="label">Username</label>
        </div>

        
        <div class="inputContainer">
            <input type="password" id="signin-password" class="input" placeholder="Password">
            <label for="signin-password" class="label">Password</label>
        </div>

        <input type="submit" class="submitBtn" value="Sign in">
        
        <!-- Link to Sign Up Page -->
        <p class="signup-link">Don't have an account? <a href="/signup">Sign up</a></p>
    </form>
</div>